{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["src/types", "./node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["dist"]
}
